<div class="container">

<h1>My restaurant</h1>
<h2>
  <%= @restaurant.name %>
</h2>
<h3>
  <%= @restaurant.address %>
</h3>
<h3>
  <%= @restaurant.phone_number %>
</h3>
<h3>
  <%= @restaurant.category %>
</h3>
<h3>
  <%= render "reviews/form", review: @review, restaurant:@restaurant %>
</h3>

<p><strong>Reviews</strong></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item" style = 'list-style-type:none;'><%= review.content %><%= review.rating %></li>
  <% end %>
</ul>

<%= link_to "Go back to your restaurants list", restaurants_path %>

</div>
